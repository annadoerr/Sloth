<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@drawable/background_list_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211">

        <TextView
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/background_list_item"
            android:paddingLeft="10dp"
            android:paddingTop="2.5dp"
            android:paddingRight="10dp"
            android:paddingBottom="2.5dp"
            android:text="@string/Deadline"
            android:textColor="@color/backgroundColor" />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/timeView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/clockView"
            android:text="@string/Date"
            android:textColor="@color/whiteText" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/dateView"
            android:contentDescription="@string/Date"
            app:srcCompat="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/timeView"
            style="@style/timeView"
            android:text="@string/Zeit" />

        <ImageView
            android:id="@+id/clockView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/timeView"
            android:contentDescription="@string/Zeit"
            app:srcCompat="@drawable/ic_clock" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@+id/deadline"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/pfeil"
            app:srcCompat="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deadline"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/yourtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/blaetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/leafs"
            android:textColor="@color/blackText" />

        <TextView
            android:id="@+id/checkedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/blaetter"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/blaetter"
            android:text="@string/number"
            android:textColor="@color/blackText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/blaetter"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/checkedNumber"
            android:text="@string/total"
            android:textColor="@color/blackText" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


